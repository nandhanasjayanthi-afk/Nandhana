    <script>
        // DOM Manipulation Demo
        document.getElementById('changeText').addEventListener('click', function() {
            document.getElementById('demoElement').textContent = 'Text changed with JavaScript!';
        });

        document.getElementById('changeColor').addEventListener('click', function() {
            const element = document.getElementById('demoElement');
            element.style.backgroundColor = '#ef476f';
            element.style.color = 'white';
        });

        document.getElementById('resetDom').addEventListener('click', function() {
            const element = document.getElementById('demoElement');
            element.textContent = 'Click the buttons to modify me!';
            element.style.backgroundColor = '#4361ee';
            element.style.color = 'white';
        });

        // Event Handling Demo
        const eventBox = document.getElementById('eventBox');
        const eventStatus = document.getElementById('eventStatus');

        eventBox.addEventListener('click', function() {
            eventStatus.textContent = 'Box clicked!';
            eventBox.style.transform = 'scale(0.95)';
            setTimeout(() => {
                eventBox.style.transform = 'scale(1)';
            }, 200);
        });

        eventBox.addEventListener('mouseover', function() {
            eventStatus.textContent = 'Mouse over the box!';
            eventBox.style.backgroundColor = '#4cc9f0';
        });

        eventBox.addEventListener('mouseout', function() {
            eventStatus.textContent = 'Mouse moved away!';
            eventBox.style.backgroundColor = '#f72585';
        });

        // Counter Demo
        let count = 0;
        const counterValue = document.getElementById('counterValue');

        document.getElementById('increment').addEventListener('click', function() {
            count++;
            counterValue.textContent = count;
        });

        document.getElementById('decrement').addEventListener('click', function() {
            count--;
            counterValue.textContent = count;
        });

        document.getElementById('resetCounter').addEventListener('click', function() {
            count = 0;
            counterValue.textContent = count;
        });

        // API Demo
        document.getElementById('fetchUser').addEventListener('click', function() {
            fetch('https://randomuser.me/api/')
                .then(response => response.json())
                .then(data => {
                    const user = data.results[0];
                    const userData = document.getElementById('userData');
                    userData.innerHTML = `
                        <div class="user-card">
                            <img src="${user.picture.large}" alt="User" class="user-avatar">
                            <div>
                                <h3>${user.name.first} ${user.name.last}</h3>
                                <p>${user.email}</p>
                                <p>${user.location.city}, ${user.location.country}</p>
                            </div>
                        </div>
                    `;
                })
                .catch(error => {
                    document.getElementById('userData').innerHTML = `
                        <p>Error fetching user data. Please try again.</p>
                    `;
                });
        });

        // To-Do List Demo
        const todoInput = document.getElementById('todoInput');
        const addTodoBtn = document.getElementById('addTodo');
        const todoList = document.getElementById('todoList');

        addTodoBtn.addEventListener('click', function() {
            if (todoInput.value.trim() !== '') {
                addTodoItem(todoInput.value);
                todoInput.value = '';
            }
        });

        todoInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && todoInput.value.trim() !== '') {
                addTodoItem(todoInput.value);
                todoInput.value = '';
            }
        });

        function addTodoItem(text) {
            const li = document.createElement('li');
            li.className = 'todo-item';
            li.innerHTML = `
                <span>${text}</span>
                <div class="todo-actions">
                    <button class="complete-btn"><i class="fas fa-check"></i></button>
                    <button class="delete-btn"><i class="fas fa-trash"></i></button>
                </div>
            `;
            
            li.querySelector('.complete-btn').addEventListener('click', function() {
                li.classList.toggle('completed');
            });
            
            li.querySelector('.delete-btn').addEventListener('click', function() {
                li.remove();
            });
            
            todoList.appendChild(li);
        }
    </script>
</body>
